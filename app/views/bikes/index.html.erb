<div class="show-content">
  <div class="left-side">
    <div class="suggestion">
    </div>
    <div class="cards">
      <% @bikes.each do |bike|  %>
        <div class="card-bike">
          <%= cl_image_tag(bike.photo, class: "card-image")%>
          <div class="card-bike-infos">
            <h2 class="card-title"><%= bike.name %></h2>
            <p class="card-text">Vélo de <%= bike.category %></p>
            <h5 class="card-bike-price"><%= bike.price %>€ par jour</h5>
          </div>
          <% if bike.user == current_user %>
            <%= link_to "Voir mon vélo", bike_path(@search_params.merge(id: bike.id)), class: "btn btn-info btn-bike" %>
          <% else %>
            <%= link_to "Voir ce vélo", bike_path(@search_params.merge(id: bike.id)), class: "btn btn-primary btn-bike" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    style="width: 40vw;
    height: calc(100vh - 70px);"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
